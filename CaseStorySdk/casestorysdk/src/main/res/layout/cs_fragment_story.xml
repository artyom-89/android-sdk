<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/buttonsPanel"
            android:elevation="9dp"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="30dp"
                app:tint="@color/white"
                android:tintMode="src_atop"
                app:srcCompat="@drawable/ic_stories_status_like"
                android:id="@+id/likeButton" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="30dp"
                app:tint="@color/white"
                android:tintMode="src_atop"
                app:srcCompat="@drawable/ic_stories_status_dislike"
                android:id="@+id/dislikeButton" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favoriteButton"
                app:tint="@color/white"
                android:tintMode="src_atop"
                app:srcCompat="@drawable/ic_stories_status_favorite"
                android:layout_width="30dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="30dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/shareButton"
                android:tintMode="src_atop"
                app:srcCompat="@drawable/ic_share_status"
                android:layout_width="30dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_above="@id/buttonsPanel"
            android:elevation="4dp"
            android:layout_height="match_parent">

            <io.casestory.sdk.stories.ui.widgets.readerscreen.StoriesWebView
                android:id="@+id/storiesWebView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
            <View
                android:id="@+id/blackBottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@drawable/narrative_gradient"
            android:clickable="false"
            android:elevation="9dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/progress_view_sdk"
        android:elevation="10dp"
        android:layout_height="wrap_content">

        <io.casestory.sdk.stories.ui.widgets.readerscreen.StoriesProgressView
            android:id="@+id/stories"
            android:paddingLeft="8dp"
            android:elevation="10dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_button"
            android:layout_width="40dp"
            android:layout_marginRight="4dp"
            android:elevation="10dp"
            android:layout_height="40dp"
            android:background="@null"
            android:padding="8dp"
            android:tint="@color/white"
            android:tintMode="src_atop"
            app:srcCompat="@drawable/narrative_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:elevation="20dp"
        android:visibility="invisible"
        android:gravity="center"
        android:id="@+id/refresh"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="32dp"
            android:scaleType="fitCenter"
            android:layout_height="32dp"
            android:src="@drawable/ic_refresh"/>

        <RelativeLayout
            android:id="@+id/blackMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:elevation="8dp"
            android:visibility="visible">

            <io.casestory.sdk.stories.ui.widgets.CoreProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="err"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:clickable="false"
        android:visibility="gone"
        android:id="@+id/blurBackground"
        android:layout_height="match_parent"/>
</RelativeLayout>

